local Webhook_URL = "https://discord.com/api/webhooks/1230917521578655805/lfEPZzhCuNyzQSfzjh5cs-fcy9-ZliJBxuy6-TTVFaSAnfd3PwA3EdYkuOUqZ-eiYhdx"

local Headers = {
    ['Content-Type'] = 'application/json',
}

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Oyuncunun avatar resminin URL'sini al
local playerProfileUrl = Players:GetUserThumbnailAsync(player.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)

local function getRandomColor()
    return math.random(0, 0xFFFFFF)
end

local randomColor = getRandomColor()

local data = {
    ["embeds"] = {
        {
            ["title"] = "Player Detected",
            ["description"] = player.DisplayName,
            ["type"] = "rich",
            ["color"] = randomColor,
            ["fields"] = {
                {
                    ["name"] = "HWID :",
                    ["value"] = game:GetService("RbxAnalyticsService"):GetClientId(),
                    ["inline"] = true,
                },
            },
            ["footer"] = {
                ["text"] = "Made By Raiwesy"
            },
            ["author"] = {
                ["name"] = player.DisplayName,
                ["icon_url"] = playerProfileUrl
            }
        },
    },
}

local PlayerData = game:GetService('HttpService'):JSONEncode(data)

local Request = http_request or request or HttpPost or syn.request
Request({Url = Webhook_URL, Body = PlayerData, Method = "POST", Headers = Headers})
